    <div class="container" style="margin-top: 40px">
        <div class="row align-items-center">
            <div class="col-sm text-center">
                <h1>{{ 'myTicket'|trans }}</h1>
            </div>

            <div class="col-sm">
                <input type="text" class="form-control" id="nbBillet" placeholder="{{ 'nbTicket'|trans }}">
