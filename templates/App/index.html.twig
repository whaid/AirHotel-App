{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="container-fluid" id="img-accueil"></div>
        <div class="container">
            <h1>{{ 'index.home'|trans }}</h1>
    <div class="container-fluid text-center text-white" id="img-accueil">
        <h1>{{ 'index.home'|trans }}</h1>
    </div>
    <div class="container pt-3">
        <form action="#" method="POST">
            <div class="card bg-dark">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <input required type="text" id="arrivalDate" placeholder="{{ "arrivalDate"|trans }}"
                                   class="form-control"
                                   name="arrivalDate"/>
                        </div>
                        <div class="col-md-3">
                            <input required type="text" id="departureDate" placeholder="{{ "departDate"|trans }}"
                                   class="form-control"
                                   name="departDate"/>
                        </div>
                        <div class="col-md-3">
                            <select required name="type" class="form-control">
                                <option selected disabled>{{ "typeofroom"|trans }}</option>
                                <option value="single">{{ "index.simple"|trans }}</option>
                                <option value="double">{{ "index.double"|trans }}</option>
                                <option value="family">{{ "index.family"|trans }}</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-success btn-block">Rechercher</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

            <table class="table mt-3">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>{{ 'index.roomremaining'|trans }}</th>
                    <th>{{ 'price'|trans }} *</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ 'index.simple'|trans }}</td>
                    <td>200</td>
                    <td>60€</td>
                </tr>
                <tr>
                    <td>{{ 'index.double'|trans }}</td>
                    <td>120</td>
                    <td>70€</td>
                </tr>
                <tr>
                    <td>{{ 'index.family'|trans }}</td>
                    <td>100</td>
                    <td>85€</td>
                </tr>
                </tbody>
            </table>
            <p class="font-weight-light font-italic">* {{ "index.taxe"|trans }}</p>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#arrivalDate, #departureDate").datepicker({
                format: "dd/mm/yyyy",
                startDate: new Date()
            });

            $('#arrivalDate').datepicker()
                .on("changeDate", function (e) {
                    $("#departureDate").datepicker('setStartDate', e.date);
                });

            $('#departureDate').datepicker()
                .on("changeDate", function (e) {
                    $("#arrivalDate").datepicker('setEndDate', e.date);
                });
        })
    </script>
{% endblock %}
